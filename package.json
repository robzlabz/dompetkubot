{
  "name": "telegram-budget-bot",
  "version": "1.0.0",
  "description": "Indonesian Telegram bot for personal financial budgeting with AI-powered natural language processing",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "test": "bun test --run"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "gramio": "^0.4.11",
    "nanoid": "^5.0.4",
    "openai": "^4.20.0",
    "pino": "^10.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "prisma": "^6.17.1",
    "typescript": "^5.3.0"
  },
  "keywords": ["telegram", "bot", "budget", "finance", "ai", "indonesian"],
  "author": "Your Name",
  "license": "MIT"
}